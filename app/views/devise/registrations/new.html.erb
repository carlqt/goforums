<div class="signup_container">
	<div class = "signup_contents">

		<p><h2>Sign up</h2><br /></p>
		
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <div><%= f.label :name%><br />
		  <%= f.text_field :name, :autofocus => true %><br /><br /></div>
		
		  <div><%= f.label :username %><br />
		  <%= f.text_field :username%><br /><br /></div>
		
		  		
		  <div><%= f.label :email %><br />
		  <%= f.email_field :email %><br /><br /></div>
		
		  <div><%= f.label :password %><br />
		  <%= f.password_field :password %><br /><br /></div>
		
		  <div><%= f.label :password_confirmation %><br />
		  <%= f.password_field :password_confirmation %><br /><br /></div>
		
		  <div><%= f.submit "Sign up" %></div>
		<% end %>
		
		<%= render "devise/shared/links" %>

	</div>
</div>
